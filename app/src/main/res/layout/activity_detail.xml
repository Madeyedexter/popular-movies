<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/iv_thumbnail"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="115dp"
            android:layout_height="170dp"
            tools:src="@drawable/placeholder_movie_poster"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            tools:text="@string/lotr_movie"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_thumbnail"
            app:layout_constraintLeft_toRightOf="@+id/iv_thumbnail"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_thumbnail"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.007" />
        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            tools:text="7.0"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
            app:layout_constraintLeft_toLeftOf="@+id/tv_release_date" />
        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            tools:text="Jan 15, 2017"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />
        <TextView
            android:text="@string/synopsis"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail" />
        <TextView
            android:id="@+id/tv_synopsis"
            tools:text="@string/lorem_ipsum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_favorite_grey_24dp"
        android:layout_marginTop="16dp"
        android:text="@string/set_as_favorite"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating"
        app:layout_constraintLeft_toLeftOf="@+id/tv_rating"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    <TextView
        android:id="@+id/tv_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_videos"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintTop_toBottomOf="@+id/tv_synopsis"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="parent"
        />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_videos"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_margin="16dp"></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/see_reviews"
        android:padding="16dp"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_videos"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_reviews"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_margin="16dp"
            />
</android.support.constraint.ConstraintLayout>
</ScrollView>